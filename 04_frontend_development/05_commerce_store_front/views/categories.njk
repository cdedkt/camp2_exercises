{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <div class="row text-white bg-dark pt-1 pb-1">
      <div class="col-12 col-md-4">
        Categories
      </div>
    </div>
    {% for category in categories %}
      <div class="row pt-1 pb-1 text-primary ">
        <div class="col-12 col-md-4">
          <a href="/categories/{{category.id}}/products">{{category.label}}</a>

        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
